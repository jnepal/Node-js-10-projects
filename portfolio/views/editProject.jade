extends layout-admin

block content
	h2 Add New Project
	form(method='post', action='/admin/project/edit/#{row.id}', enctype='multipart/form-data')
		.form-group
			label Title
				input.form-control(type='text', name='title' value='#{row.title}' required)
		.form-group
			label Description
				textarea.form-control(name='description')
					|#{row.description}
		.form-group
			label Service
				input.form-control(type='text', name='service' value='#{row.service}' required)
		.form-group
			label Client
				input.form-control(type='text', name='client' value='#{row.client}' required)
		.form-group
			label Project Image
				input.form-control(type='file', name='image' value='#{row.image}')
		.form-group
			label Date
				input.form-control(type='date', name='postDate')
		button.btn.btn-default(type='submit') Submit