extends layout

block content
	h1 #{title}
	ul.errors
		if(errors)
			each error, i in errors
				li.alert.alert-danger #{error.msg}
		form(method= 'post', action= '/posts/add', enctype='multipart/form-data')
			.form-group
				label Title:
				input.form-control(name='title', type='text' required)
			.form-group
				label Category
				select.form-control(name='category')
					each category, i in categories
						option(value='#{category.title}') #{category.title}
			.form-group
				label Description
				textarea.form-control(name='body', id='body' required)
			.form-group
				label Main Image:
				input.form-control(name='mainImage', type='file')
			.form-group
				label Author:
				select.form-control(name= 'author')
					option(value= 'admin') admin
			input.btn.btn-default(name= 'submit', type='submit', value='Publish')
			script(src='/library/ckeditor/ckeditor.js')
			script
				| CKEDITOR.replace('body')